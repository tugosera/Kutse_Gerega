@model kutse_app.Models.Guest

@{
    ViewBag.Title = "Thanks";
}

<div>
    <p> Tänan sind, @Model.Name </p>
</div>
<div>
    @if (Model.WillAttend == true)
    {
        @: Ootan sind kallis sõber!
        <p>
            <img src="~/Images/zxccat.jpg" />
        </p>
        <form method="post" action="/Home/SendEmailAgain">
            @Html.HiddenFor(m => m.Name)
            @Html.HiddenFor(m => m.Email)
            @Html.HiddenFor(m => m.WillAttend)
            <button type="submit" class="btn btn-success">Saada meeldetuletus</button>
        </form>
    }
    else
    {
        @: Väga kurb uudis. Näeme hiljem!
        <p>
            <img src="~/Images/zxccat_terrorblade.jpg" />

            @ViewBag.Message
            @Html.ActionLink("Vastan", "Ankeet", "Ankeet", new { @class = "btn btn-primary" })
        </p>
    }
</div>